<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mifare_Tool.Templates">


    <Style TargetType="local:LinkTile">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:LinkTile">
                    <Border x:Name="Root" Margin="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid x:Name="ContentHost" Background="{TemplateBinding Background}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Glyph}" FontSize="32px" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Text="{TemplateBinding Label}" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
